################################################################
# Manage anchor deployment through Crypto Infrastructure as Code
################################################################

addon "svm" {
    rpc_api_url = input.rpc_api_url
    network_id = input.network_id
}

action "deploy_journal" "svm::deploy_program" {
    description = "Deploy journal program"
    program = svm::get_program_from_anchor_project("journal") 
    authority = signer.authority
    payer = signer.payer
}
